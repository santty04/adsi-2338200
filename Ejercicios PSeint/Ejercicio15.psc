Proceso Ejercicio15
	// Pedir el lado de un cuadrado, mostrar su área y su perímetro.
	
	// Definicion de variables
	Definir lado Como Real;
	Definir area Como Real;
	Definir perimetro Como Real;
	
	// Entradas
	Escribir "Escribar el lado del cuadrado";
	Leer lado;
	
	// Operaciones
	area = lado * lado;
	perimetro = lado + lado + lado + lado;
	
	// Salidas
	Escribir "El area del cuadrado es " , area , " y el perimetro del cuadrado es " , perimetro;
	
	
FinProceso
