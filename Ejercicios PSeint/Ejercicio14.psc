Proceso Ejercicio14
	// Pedir el radio de una circunferencia y calcular su longitud.
	
	// Definicion de variables
	Definir radio Como Real;
	Definir long Como Real;
	
	// Entrada 
	Escribir "Escriba el radio de la circunferencia";
	Leer radio;
	
	// Operaciones
	long = 2 * PI * radio;
	
	// Salidas
	Escribir "La longitud de la circunferencia es " , long ;
	
	
	
FinProceso
